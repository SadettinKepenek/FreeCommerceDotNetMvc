
@{
    ViewBag.Title = "UpdateCustomer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    List<Segment> segments;
    using (SegmentManager segmentManager = new SegmentManager())
    {
        segments = segmentManager.GetAll();
    }
}
@using FreeCommerceDotNet.Models.DbManager
@using FreeCommerceDotNet.Models.DbModels
@model FreeCommerceDotNet.Models.BusinessModels.CustomerBM
<div class="container-fluid">
    <div class="row product-adding">
        <div class="col-xl-8">
            <div class="card">

                <div class="card-body">
                    <div class="digital-add needs-validation">
                        @using (Html.BeginForm("UpdateCustomer", "Admin", FormMethod.Post))
                        {
                            @Html.HiddenFor(x => x.Customer.CustomerId)
                            @Html.HiddenFor(x => x.Customer.Password)
                            @Html.HiddenFor(x => x.Customer.Status)

                            <div class="form-group">
                                <label for="validationCustom01" class="col-form-label pt-0"><span>*</span> First Name:</label>
                                @Html.TextBoxFor(x => x.Customer.Firstname, new { @class = "form-control", id = "validationCustom01", type = "text", required = "" })
                            </div>
                            <div class="form-group">
                                <label for="validationCustom02" class="col-form-label pt-0"><span>*</span> Last Name:</label>
                                @Html.TextBoxFor(x => x.Customer.Lastname, new { @class = "form-control", id = "validationCustom02", type = "text", required = "" })
                            </div>
                            <div class="form-group">
                                <label for="validationCustom03" class="col-form-label pt-0"><span>*</span> Address1:</label>
                                @Html.TextBoxFor(x => x.Customer.Address1, new { @class = "form-control", id = "validationCustom03", type = "text", required = "" })
                            </div>
                            <div class="form-group">
                                <label for="validationCustom04" class="col-form-label pt-0"><span>*</span> Address2:</label>
                                @Html.TextBoxFor(x => x.Customer.Address2, new { @class = "form-control", id = "validationCustom04", type = "text", required = "" })
                            </div>
                            <div class="form-group">
                                <label for="validationCustom05" class="col-form-label pt-0"><span>*</span> E-Mail:</label>
                                @Html.TextBoxFor(x => x.Customer.Email, new { @class = "form-control", id = "validationCustom05", type = "text", required = "" })
                            </div>
                            <div class="form-group">
                                <label for="validationCustom06" class="col-form-label pt-0"><span>*</span> TaxAddress:</label>
                                @Html.TextBoxFor(x => x.Customer.TaxAddress, new { @class = "form-control", id = "validationCustom06", type = "text", required = "" })
                            </div>
                            <div class="form-group">
                                <label for="validationCustom07" class="col-form-label pt-0"><span>*</span> Telephone:</label>
                                @Html.TextBoxFor(x => x.Customer.Telephone, new { @class = "form-control", id = "validationCustom07", type = "text", required = "" })
                            </div>
                            <div class="form-group">

                                <label for="validationCustom08" class="col-form-label pt-0"><span>*</span> Segment:</label>
                                @Html.DropDownListFor(x => x.Customer.SegmentId, new SelectList(segments, "SegmentId", "SegmentName"), new { @class = "form-control", id = "validationCustom08", type = "text", required = "" })
                            </div>
                            <div class="offset-xl-3 offset-sm-4">
                                <button type="submit" class="btn btn-primary">Update</button>
                                @Html.ActionLink("Discard", "Customers", "Admin", null, new { type = "button", @class = "btn btn-light" })
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/assets/js/jquery-3.3.1.min.js"></script>
<!-- Container-fluid Ends-->
<script src="~/assets/js/dashboard/form-validation-custom.js"></script>
<!-- ckeditor js-->
<script src="~/assets/js/editor/ckeditor/ckeditor.js"></script>
<script src="~/assets/js/editor/ckeditor/styles.js"></script>
<script src="~/assets/js/editor/ckeditor/adapters/jquery.js"></script>
<script src="~/assets/js/editor/ckeditor/ckeditor.custom.js"></script>

<script src="~/assets/js/jquery.elevatezoom.js"></script>
<script src="~/assets/js/zoom-scripts.js"></script>