
@{
    ViewBag.Title = "AttributeList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@{
    ViewBag.Title = "AttributeGroupList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using System.Diagnostics.Eventing.Reader
@using System.Web.UI.WebControls

@model List<FreeCommerceDotNet.Entities.Concrete.Attribute>
@using Attribute=FreeCommerceDotNet.Entities.Concrete.Attribute
@helper GetProductActionButtons(Attribute bm)
{

    <td class="text-center">
        @Html.ActionLink("Update", "UpdateAttribute", "Admin", new { id = bm.AttributeId }, new { @class = "btn btn-sm btn-danger" })
        @Html.ActionLink("Delete", "DeleteAttribute", "Admin", new { id = bm.AttributeId }, new { @class = "btn btn-sm btn-warning", data_confirm = "Do you really want to delete this AttributeGroup?" })
    </td>
}
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <div class="page-header-left">
                    <h3>
                        Attribute List
                        <small>FreeCommerce Admin panel</small>
                    </h3>
                </div>
            </div>
            <div class="col-lg-6">
                <ol class="breadcrumb pull-right">
                    <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item active">Product/Attribute/Attribute List</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                @{
                    if (TempData["MessageAttribute"] != null)
                    {

                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["MessageAttribute"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                    }

                }
                <div class="card-body">
                    <table class="table" width="2000">
                        <thead>
                            <tr>
                                <th scope="col">Attribute Id</th>
                                <th scope="col">Attribute Name</th>
                                <th scope="col">Attribute Group Name</th>
                                <th scope="col" class="text-center">Actions</th>
                            </tr>
                        </thead>



                        <tbody>

                            @foreach (Attribute bm in Model)
                            {
                                <tr>
                                    <th scope="row">@bm.AttributeId</th>
                                    <td>@bm.AttributeName</td>
                                    <td>@bm.AttributeGroup.AttributeGroupName</td>
                                    @GetProductActionButtons(bm)
                                </tr>
                            }



                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    jQuery(document).ready(function () {
        jQuery('[data-confirm]').click(function (e) {
            if (!confirm(jQuery(this).attr("data-confirm"))) {
                e.preventDefault();
            }
        });
    });
</script>


