
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@using System.Diagnostics.Eventing.Reader
@using System.Web.UI.WebControls
@using FreeCommerceDotNet.Models.BusinessModels
@using FreeCommerceDotNet.Models.DbModels
@model List<FreeCommerceDotNet.Models.BusinessModels.CustomerBM>

@helper GetProductActionButtons(CustomerBM bm)
{
    <td class="text-center">
        @Html.ActionLink("Update", "UpdateCustomer", "Admin", new { id = bm.Customer.CustomerId }, new { @class = "btn btn-sm btn-danger" })
        @Html.ActionLink("Delete", "DeleteCustomer", "Admin", new { id = bm.Customer.CustomerId}, new { @class = "btn btn-sm btn-warning",data_confirm="Do you really want to delete this customer?"})
        
    </td>
}

<!-- Container-fluid Begins-->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5>Customer Lists</h5>

                </div>
                @{
                    if (TempData["Message"] != null)
                    {

                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Message"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                    }

                }
                <div class="card-body">
                    <table class="table" width="2000">
                        <thead>
                            <tr>
                                <th scope="col">Customer Id</th>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Segment</th>
                                <th scope="col">E-Mail</th>
                                <th scope="col">Telephone</th>
                                <th scope="col">Password</th>

                                <th scope="col" class="text-center">Actions</th>
                            </tr>
                        </thead>



                        <tbody>
                            @if (Model != null)
                            {
                                foreach (CustomerBM bm in Model)
                                {
                                    <tr>
                                        <th scope="row">@bm.Customer.CustomerId</th>
                                        <td>@bm.Customer.Firstname</td>
                                        <td>@bm.Customer.Lastname</td>
                                        <td>@bm.Segment.SegmentName</td>
                                        <td>@bm.Customer.Email</td>
                                        <td>@bm.Customer.Telephone</td>
                                        <td>@bm.Customer.Password</td>
                                        @GetProductActionButtons(bm)
                                    </tr>
                                }

                            }
                            @if (Model == null)
                            {
                                <tr>
                                    <th></th>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Container-fluid Ends-->
<script>
    jQuery(document).ready(function () {
        jQuery('[data-confirm]').click(function (e) {
            if (!confirm(jQuery(this).attr("data-confirm")))
            {
                e.preventDefault();
            }
        });
    });
</script>
