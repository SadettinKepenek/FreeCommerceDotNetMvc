
@{
    ViewBag.Title = "AddAttributeGroup";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using Segment = FreeCommerceDotNet.Entities.Concrete.Segment

@model Segment

<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <div class="page-header-left">
                    <h3>
                        Update Segments
                        <small>FreeCommerce Admin panel</small>
                    </h3>

                </div>
            </div>
            <div class="col-lg-6">
                <ol class="breadcrumb pull-right">
                    <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item active">Update Segments</li>

                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row product-adding">
        <div class="col-xl-8">
            <div class="card">
                <div class="card-body">
                    <div class="digital-add needs-validation">
                        @using (Html.BeginForm("UpdateSegment", "Admin", FormMethod.Post))
                        {
                            @Html.HiddenFor(x => x.SegmentId)

                            <div class="form-group">
                                <label for="validationCustom09" class="col-form-label pt-0"><span>*</span>Segment Name:</label>
                                @Html.TextBoxFor(x => x.SegmentName, new { @class = "form-control", id = "validationCustom09", type = "text", required = "" })
                            </div>
                            <div class="form-group">
                                <label for="validationCustom010" class="col-form-label pt-0"><span>*</span>Segment Priorty:</label>
                                @Html.TextBoxFor(x => x.Priorty, new { @class = "form-control", id = "validationCustom010", type = "text", required = "" })
                            </div>
                            <div class="offset-xl-3 offset-sm-4">
                                <button type="submit" class="btn btn-primary">Update</button>
                                @Html.ActionLink("Discard", "Segments", "Admin", null, new { type = "button", @class = "btn btn-light" })
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



