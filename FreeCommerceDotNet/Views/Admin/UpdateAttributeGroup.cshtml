
@{
    ViewBag.Title = "AddAttributeGroup";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model FreeCommerceDotNet.Entities.Concrete.AttributeGroup

<div class="container-fluid">
    <div class="row product-adding">
        <div class="col-xl-8">
            <div class="card">
                <div class="card-header">
                    <h5> Update Attribute Group</h5>
                </div>
                <div class="card-body">
                    <div class="digital-add needs-validation">
                        @using (Html.BeginForm("UpdateAttributeGroup", "Admin", FormMethod.Post))
                        {
                            @Html.HiddenFor(x => x.AttributeGroupId)

                            <div class="form-group">
                                <label for="validationCustom09" class="col-form-label pt-0"><span>*</span>Attribute Group Name:</label>
                                @Html.TextBoxFor(x => x.AttributeGroupName, new { @class = "form-control", id = "validationCustom09", type = "text", required = "" })
                            </div>

                            <div class="offset-xl-3 offset-sm-4">
                                <button type="submit" class="btn btn-primary">Update</button>
                                @Html.ActionLink("Discard", "AttributeGroupList", "Admin", null, new { type = "button", @class = "btn btn-light" })
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



