
@{
    ViewBag.Title = "ShippingGateways";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using Shipping = FreeCommerceDotNet.Entities.Concrete.Shipping

@model List<Shipping>

@helper GetProductActionButtons(Shipping bm)
{
    <td class="text-center">
        @Html.ActionLink("Update", "UpdateShippingGateway", "Admin", new { id = bm.ShippingId }, new { @class = "btn btn-sm btn-danger" })
        @Html.ActionLink("Delete", "DeleteShippingGateway", "Admin", new { id = bm.ShippingId }, new { @class = "btn btn-sm btn-warning" })
    </td>
}



<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <div class="page-header-left">
                    <h3>
                        Shipping Gateways
                        <small>FreeCommerce Admin panel</small>
                    </h3>

                </div>
            </div>
            <div class="col-lg-6">
                <ol class="breadcrumb pull-right">
                    <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item active">Add Shipping Gateway</li>

                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row product-adding">
        <div class="col-xl-8">
            <div class="card">
                <div class="card-header">
                    <h5> Add Shipping Gateway</h5>
                    <h3>@TempData["ShippingGatewayMessage"]</h3>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Gateway Name</th>
                                <th scope="col">Gateway Description</th>
                                <th scope="col" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Shipping bm in Model)
                            {
                                <tr>
                                    <th scope="row">@bm.ShippingId</th>
                                    <td>@bm.ShippingName</td>
                                    <td>@bm.ShippingDescription</td>
                                    @GetProductActionButtons(bm)


                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
