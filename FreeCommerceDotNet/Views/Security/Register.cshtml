@using FreeCommerceDotNet.Entities.Concrete
@model FreeCommerceDotNet.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutFrontEnd.cshtml";
}
@{
    List<Segment> segments = ViewBag.Segments;
}
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>create account</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">create account</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="register-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>create account</h3>
                <div class="theme-card">
                    @using (Html.BeginForm("Register", "Security", FormMethod.Post, new { @class = "theme-form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="email">First Name</label>
                                @Html.TextBoxFor(x => x.Customer.Firstname, new { @class = "form-control", placeholder = "Firstname", required = "required", type = "input" })
                            </div>
                            <div class="col-md-6">
                                <label for="review">Last Name</label>
                                @Html.TextBoxFor(x => x.Customer.Lastname, new { @class = "form-control", placeholder = "Lastname", required = "required", type = "input" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="email">email</label>
                                @Html.TextBoxFor(x => x.Customer.Email, new { @class = "form-control", placeholder = "Email", required = "required", type = "input" })
                            </div>
                            <div class="col-md-6">
                                <label for="review">Telephone</label>
                                @Html.TextBoxFor(x => x.Customer.Telephone, new { @class = "form-control", placeholder = "Telephone", required = "required", type = "input" })

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="email">Billing Address</label>
                                @Html.TextBoxFor(x => x.Customer.Address1, new { @class = "form-control", placeholder = "Billing Address", required = "required", type = "input" })
                            </div>
                            <div class="col-md-6">
                                <label for="review">Shipping Address</label>
                                @Html.TextBoxFor(x => x.Customer.Address2, new { @class = "form-control", placeholder = "Shipping Address", required = "required", type = "input" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="email">Tax Address</label>
                                @Html.TextBoxFor(x => x.Customer.TaxAddress, new { @class = "form-control", placeholder = "Tax Address", required = "required", type = "input" })
                            </div>
                            <div class="col-md-6">
                                <label for="email">Segment</label>
                                @Html.DropDownListFor(x => x.Customer.SegmentId, new SelectList(segments,"SegmentId","SegmentName"),new { @class = "form-control", placeholder = "Segment", required = "required"})
                            </div>
                        </div>
                      
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="email">Password</label>
                                @Html.PasswordFor(x => x.User.Password, new { @class = "form-control", placeholder = "Password", required = "required", type = "password" })

                            </div>
                            <div class="col-md-6">

                            </div>
                        </div>
                        <div class="form-row">
                            <button type="submit" class="btn btn-solid">create Account</button>

                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->
