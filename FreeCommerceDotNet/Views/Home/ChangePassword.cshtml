
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutFrontEnd.cshtml";
}
@using FreeCommerceDotNet.Entities.Concrete
@model User
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>create account</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Change Password</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="register-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>Change Password</h3>
                <div class="theme-card">
                    @using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post, new { @class = "theme-form" }))
                    {
                        @Html.HiddenFor(x => x.UserId)
                        @Html.HiddenFor(x => x.Username)
                        @Html.HiddenFor(x => x.EMail)
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="email">New Password:</label>
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control", id = "pswrd1", required = "" })
                            </div>
                            <div class="col-md-6">
                                <label for="review">Write Your Password Again:</label>
                                <input type="password" class="form-control" id="pswrd2" required="">
                            </div>
                        </div>
                        <button type="submit" onclick="controlPasswords()" class="btn btn-solid">Submit</button>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function controlPasswords() {
        var password1 = $('#pswrd1').val();
        var password2 = $('#pswrd2').val();
        if (password1 != password2) {
            alert("Girdiğiniz şifreler uyuşmuyor");
        }
    }
</script>
