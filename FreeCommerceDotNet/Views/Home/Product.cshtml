                    <div class="tab-pane fade show active" id="top-profile-description" role="tabpanel" aria-labelledby="top-home-tab">
                        <p>@Model.ProductDescription</p>
                    </div>
                    <div class="tab-pane fade" id="top-reviewlist" role="tabpanel" aria-labelledby="profile-top-reviews">

                        <section class="section-b-space blog-detail-page review-page">
                            <div class="container">
                                <div class="row">
                                    <div class="col-sm-8">

                                        <ul class="comment-section">


                                            @foreach (var review in ViewBag.reviews)
                                            {
                                                <li>
                                                    <div class="media">

                                                        <img src="~/assets/images/2.jpg" alt="Generic placeholder image">
                                                        <div class="media-body">
                                                            <h6>@review.customer.Firstname @review.customer.Lastname <span>(@review.Date )</span></h6>
                                                            <strong>@review.Title</strong>
                                                            <p>@review.Text</p>
                                                            <ul class="comnt-sec">
                                                                <li><a href="#"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i><span>(14)</span></a></li>
                                                                <li><a href="#"><div class="unlike"><i class="fa fa-thumbs-o-down" aria-hidden="true"></i>(2)</div></a></li>
                                                            </ul>
                                                        </div>
                                                        @if (review.CustomerId == ViewBag.CustomerId)
                                                        {
                                                            <button onclick="DeleteReviewAjax()"><i class="fa fa-trash" aria-hidden="true"></i></button>
                                                        }
                                                        <script type="text/javascript">
                                                            function DeleteReviewAjax() {
                                                                var url = location.protocol + '//' + location.host + "/Home/DeleteReview";
                                                                $.ajax({
                                                                    type: "POST",
                                                                    url: url,
                                                                    // The key needs to match your method's input parameter (case-sensitive).
                                                                    data: JSON.stringify({ ReviewId: @review.ReviewId }),
                                                                    contentType: "application/json; charset=utf-8",
                                                                    dataType: "json",
                                                                    success: function (data) {
                                                                        if (data === "Success") {
                                                                            location.reload();
                                                                        }
                                                                        else {
                                                                            alert(data);
                                                                        }
                                                                    },
                                                                    failure: function (errMsg) {

                                                                        alert(errMsg);
                                                                    }
                                                                });
                                                            }
                                                        </script>
                                                    </div>


                                                </li>

                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </section>

                    </div>
                    <div class="tab-pane fade" id="top-profile" role="tabpanel" aria-labelledby="profile-top-tab">
