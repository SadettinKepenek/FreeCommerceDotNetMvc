                            {

                                var discount = Model.ProductDiscounts.FirstOrDefault().NewPrice;
                                var price = Model.ProductPrices.FirstOrDefault().Price;

                                var rate = ((price - discount) / price) * 100;
                                <h4><del>@price</del><span>%@rate off</span></h4>
                                <h3>@discount tl</h3>

