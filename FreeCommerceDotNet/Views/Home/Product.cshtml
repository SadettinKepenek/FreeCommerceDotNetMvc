@helper getProductAttributes()
{

using (AttributeManager bm = new AttributeManager())
{
    foreach (var item in Model.ProductAttributes)
    {

        var attribute = bm.Get(item.AttributeId);
            <td>@attribute.AttributeName</td>
            <td>@item.AttributeDescription</td>
        }
    }

}
