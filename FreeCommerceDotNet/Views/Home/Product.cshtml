                            <hr>
                            <div class="tab-pane fade" id="top-review" role="tabpanel" aria-labelledby="review-top-tab">
                                <h5>Bir ürün için zaten bir yorumunuz bulunmaktadır</h5>
                            </div>

                        }
                        else
                        {
                            <div class="tab-pane fade" id="top-review" role="tabpanel" aria-labelledby="review-top-tab">

                                <form id="myForm">

                                    <div class="form-row">
                                        <div class="col-md-12">
                                            <div class="media">
                                                <label>Rating</label>
                                                <div class="media-body ml-3">
                                                    <div id="rating">
                                                        <span id="star1"></span>
                                                        <span id="star2"></span>
                                                        <span id="star3"></span>
                                                        <span id="star4"></span>
                                                        <span id="star5"></span>
                                                    </div>
                                                </div>

                                                <script type="text/javascript">
                                                    document.querySelector('#rating').addEventListener('click', function (e) {
                                                        let action = 'add';

                                                        for (const span of this.children) {
                                                            span.classList[action]('active');
                                                            if (span === e.target) {
                                                                action = 'remove';
                                                                window.rate = e.target.id.replace("star", "");
                                                                console.log('rate ' + window.rate);
                                                            };
                                                        }
                                                    });
                                                </script>

                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <label for="review">Review Title</label>
                                            <input type="text" class="form-control" id="review" placeholder="Enter your Review Subjects" required>
                                        </div>
                                        <div class="col-md-12">
                                            <label for="review">Review</label>
                                            <textarea class="form-control" placeholder="Wrire Your Testimonial Here" id="exampleFormControlTextarea1" rows="6"></textarea>
                                        </div>
                                        <div class="col-md-12">
                                            <button class="btn btn-solid" onclick="AddReviewAjax()" type="button">Submit Your Review</button>
                                        </div>
                                    </div>
                                </form>

                                <script type="text/javascript">
                                    function AddReviewAjax() {
                                        var values = {
                                            CustomerId:@ViewBag.customerId,
                                            ProductId:@ViewBag.ProductId,
                                            Title: document.getElementById("review").value,
                                            Text: document.getElementById("exampleFormControlTextarea1").value,
                                            Rating: window.rate

                                        };

                                        var url = location.protocol + '//' + location.host + "/Home/AddReview";
                                        $.ajax({
                                            type: "POST",
                                            url: url,
                                            // The key needs to match your method's input parameter (case-sensitive).
                                            data: JSON.stringify({ review: values }),
                                            contentType: "application/json; charset=utf-8",
                                            dataType: "json",
                                            success: function (data) {
                                                if (data === "Success") {
                                                    location.reload();
                                                }
                                                else {
                                                    alert(data);
                                                }
                                            },
                                            failure: function (errMsg) {

                                                alert(errMsg);
                                            }
                                        });
                                    }


                                </script>
                            </div>
                        }


                    }

                </div>
            </div>
        </div>
    </div>
</section>
