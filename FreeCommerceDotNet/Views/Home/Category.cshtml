@using FreeCommerceDotNet.BLL.Concrete
@using FreeCommerceDotNet.DAL.Concrete
@using FreeCommerceDotNet.Models.BusinessModels
@using FreeCommerceDotNet.Models.DbModels
@using Brand = FreeCommerceDotNet.Entities.Concrete.Brand
@using Category = FreeCommerceDotNet.Entities.Concrete.Category
@using Product = FreeCommerceDotNet.Entities.Concrete.Product

@model FreeCommerceDotNet.Entities.Concrete.Category


@{
    List<Brand> brands = new List<FreeCommerceDotNet.Entities.Concrete.Brand>();

    foreach (Product modelProduct in Model.Products)
    {
        var brandEntity = modelProduct.BrandEntity;
        if (brands.FirstOrDefault(x => x.BrandId == brandEntity.BrandId) == null)
        {
            brands.Add(brandEntity);
        }
    }
}
@{
    int categoryId = ViewBag.CategoryId;
    CategoryManager manager = new CategoryManager(new CategoryRepository());
    var categoryPermanent = manager.SelectById(categoryId);
}
@helper GetNewProductsSideBar(int start, int count, Category category)
{


    var newProducts = category.Products.Skip(start).Take(count - start);
    foreach (Product bm in newProducts)
    {
        <div class="media">
            <a href="">
                <img class="img-fluid blur-up lazyload" src="@bm.ImageUrl" alt="">
            </a>
            <div class="media-body align-self-center">
                <div class="rating">
                    <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                </div>
                <a href="product-page(no-sidebar).html">
                    <h6>Slim Fit Cotton Shirt</h6>
                </a>

                @if (bm.ProductPrices?.FirstOrDefault() != null)
                {
                    <h4>$@(bm.ProductPrices?.FirstOrDefault().Price)</h4>
                }
                else
                {
                    <h4>$0.00</h4>
                }


            </div>
        </div>
    }
}



@helper GetSubCategoriesSideBar()
{
    if (Model.SubCategories != null && Model.SubCategories.Count != 0)
    {
        <div class="collection-collapse-block open">
            <h3 class="collapse-block-title">Alt Kategoriler</h3>
            <div class="collection-collapse-block-content">
                <div class="collection-brand-filter">

                    @foreach (Category subCategory in Model.SubCategories)
                    {

                        if (Model.Products.Where(x => x.CategoryId == subCategory.CategoryId) != null)
                        {
                            <div class="custom-control custom-checkbox collection-filter-checkbox">
                                <input type="checkbox" class="custom-control-input" onchange="changeSubCategoryId(this.id);" id="subcategory_@subCategory.CategoryId">
                                <label class="custom-control-label" for="subcategory_@subCategory.CategoryId">@subCategory.CategoryName</label>
                            </div>
                        }

                    }


                </div>
            </div>
        </div>
    }
}

@helper GetBrandsSidebar(List<Brand> brands)
{
    <div class="collection-collapse-block open">
        <h3 class="collapse-block-title">brand</h3>
        <div class="collection-collapse-block-content">
            <div class="collection-brand-filter">

                @foreach (Brand brand in brands)
                {
                    <div class="custom-control custom-checkbox collection-filter-checkbox">
                        <input type="checkbox" class="custom-control-input" onchange="changeBrandId(this.id);" id="brand_@brand.BrandId">
                        <label class="custom-control-label" for="brand_@brand.BrandId">@brand.BrandName</label>
                    </div>
                }


            </div>
        </div>
    </div>
}

