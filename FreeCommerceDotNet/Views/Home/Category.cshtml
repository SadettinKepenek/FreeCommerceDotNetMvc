<script type="text/javascript">

    var maxPrice = 0;
    var minPrice = 0;
    @{
        if (Model.Products?.Max(x=>x.ProductPrices?.Max(y=>y.Price))!=null)
        {
            @:maxPrice = @(Model.Products?.Max(x => x.ProductPrices?.Max(y => y.Price)));

        }
         if (Model.Products?.Min(x=>x.ProductPrices?.Min(y=>y.Price))!=null)
        {
            @:minPrice = @(Model.Products?.Min(x => x.ProductPrices?.Min(y => y.Price)));

        }
    }
    //maxPrice =@(Model.Products?.Max(x=>x.ProductPrices?.Max(y=>y.Price)));
     @*minPrice=@(Model.Products?.Min(x=>x.ProductPrices?.Min(y=>y.Price)));*@
    $("#priceSlider").ionRangeSlider({
        type: "double",
        min:minPrice,
        max: maxPrice,
        grid: true,
        skin:"modern",
        prefix: "₺",
        onChange: function(data) {
            setCookie("MinPrice",data.from);
            setCookie("MaxPrice",data.to);

        }
    });
    var filtreVarmi = false;
    if (getCookie("MinPrice") != null && getCookie("MaxPrice") != null) {
        let priceSlider = $(".js-range-slider").data("ionRangeSlider");
        priceSlider.update({
            from: getCookie("MinPrice"),
            to: getCookie("MaxPrice")
        });
        filtreVarmi = true;
    }
    if (getCookie("BrandFilterId")!=null) {
        document.getElementById("brand_" + getCookie("BrandFilterId")).checked = true;
        filtreVarmi = true;
    }
    if (getCookie("CategoryFilterId") != null) {
        document.getElementById("subcategory_" + getCookie("CategoryFilterId")).checked = true;
        filtreVarmi = true;
    }

    if (filtreVarmi==false) {
        $('#btnClearFilters').attr('disabled', 'disabled');
        document.getElementById("btnClearFilters").innerText= "No Filter";

    }

</script>

