<script type="text/javascript">
    window.subCategoryId = 0;
    window.brandId = 0;
    function changeBrandId(id) {
        var Id = id.replace("brand_", "");
        window.brandId = Id;
        console.log(Id);
        setCookie("BrandFilterId", Id);

    }
    function changeSubCategoryId(id) {
        var Id = id.replace("subcategory_", "");
        window.subCategoryId = Id;
        console.log(Id);
        setCookie("CategoryFilterId", Id);

    }


    function applyFilters() {
        alert("Category Filter " + getCookie("CategoryFilterId"));
        alert("Price Filter " + getCookie("MinPrice") + " " + getCookie("MaxPrice"));
        alert("Brand Filter " + getCookie("BrandFilterId"));
    }
    function clearFilters() {
        eraseCookie("CategoryFilterId");
        eraseCookie("BrandFilterId");
        eraseCookie("MinPrice");
        eraseCookie("MaxPrice");
        location.reload();
    }

</script>


